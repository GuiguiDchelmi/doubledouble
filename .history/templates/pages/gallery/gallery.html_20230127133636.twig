{% extends 'base.html.twig' %}

{% block title %}DOUBLE DOUBLE STUDIO
{% endblock %}

{% block body %}
    {% block header %}
			{% include "partials/_header.html.twig" %}
		{% endblock %}
    <h2>La gallerie de nos projets</h2>
    <div class="project">
		{% if app.user %}
			<a class="add-button" href="{{ path('gallery.add') }}">Ajouter un projet</a>
		{% endif %}
    </div>
    <main class="container">
		{% for picture in pictures %}
			<section class="picture-item">
					<img src="../public{{ vich_uploader_asset(pictures, 'imageFile') }} " alt="projet">
				<div class="picture-options">
					<h2>{{ pictures.project_id }} // {{ pictures.name }}</h2>
				{% if app.user %}
					<button class="delete">
						<a href="{{ path('gallery.delete', { id: pictures.id }) }}">Delete</a>
					</button>
				{% endif %}
				</div>
			</section>
		{% endfor %}
	</main>

{% endblock %}
    